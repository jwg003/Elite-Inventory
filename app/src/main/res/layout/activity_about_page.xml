<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jwg.eliteinventory.mainactivities.About_Page">


    <include
        layout="@layout/tool_bar"
        android:id="@+id/tool_bar">
    </include>

    <ImageView
        android:src="@drawable/eliteinventorylogodesign"
        android:id="@+id/splashscreen"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_width="400dip"
        android:layout_height="600dip"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/about_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashscreen"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/about_bottom_padding"
        android:text="@string/about_page_author"/>
    <TextView
        android:id="@+id/about_text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_text_info"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/about_bottom_padding"
        android:text="@string/about_page_version"/>
</RelativeLayout>
